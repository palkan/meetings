<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                width="100" height="30">
    <fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:states>
		<s:State name="normal" />            
		<s:State name="hovered" />
		<s:State name="selected" />
		<s:State name="normalAndCaret" />
		<s:State name="hoveredAndCaret" />
		<s:State name="selectedAndCaret" />
	</s:states>
	
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color.normal="0xEFEFEF"
						  color.normalAndCaret="0x7BA6C3"
						  color.hovered="0x7BA6C3"    
						  color.hoveredAndCaret="0x7BA6C3"
						  color.selected="0x7BA6C3"
						  color.selectedAndCaret="0x7BA6C3" />
		</s:fill>
	</s:Rect>
	<s:Label top="5" left="5" text="{data}"/>
</s:ItemRenderer>
