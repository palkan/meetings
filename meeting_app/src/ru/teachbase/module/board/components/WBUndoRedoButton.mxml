<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         implements="ru.teachbase.module.board.components.IWBComponent"
         initialize="init(event)" xmlns:components="ru.teachbase.module.board.components.*"
        >
    <fx:Metadata>
        [Event(name="undo_redo", type="ru.teachbase.module.board.events.WhiteBoardEvent")]
    </fx:Metadata>
	<fx:Script>
		<![CDATA[
        import mx.events.FlexEvent;

        import ru.teachbase.module.board.events.WhiteBoardEvent;
        import ru.teachbase.utils.shortcuts.style;

        private var _active:Boolean = false;

        [Bindable]
        public var undoNum:int = 0;
        [Bindable]
        public var redoNum:int = 0;

        protected function onClick(event:MouseEvent):void {
            // TODO Auto-generated method stub

            if (event.target is WBButton)
                dispatchEvent(new WhiteBoardEvent(WhiteBoardEvent.UNDOREDO, event.target.id));

        }

        protected function init(event:FlexEvent):void {
            // TODO Auto-generated method stub

            this.addEventListener(MouseEvent.CLICK, onClick, true);

        }

        public function get active():Boolean {
            return _active;
        }

        public function set active(value:Boolean):void {
            _active = value;
        }
        ]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:HGroup width="35" height="29" gap="0">
		<components:WBButton id="undo" width="17" height="29" 
					 initialize="with(undo){iconUp=style('wb','undo');iconDown=style('wb','undoOver'); iconOver=style('wb','undoOver'); iconDisabled=style('wb','undoDisabled');}"
					 />
		<components:WBButton id="redo" width="18" height="29" 
					 initialize="with(redo){iconUp=style('wb','redo');iconDown=style('wb','redoOver');iconOver=style('wb','redoOver');iconDisabled=style('wb','redoDisabled'); }"
					 />
	</s:HGroup>
</s:Group>
