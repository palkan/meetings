        }

        private function onImageChoose(url:String, title:String = ""):void {
            container.renderer = WorkplaceRenderers.getClassById("img");
            var xml:XML = <main>
                <items>
                    <item slideurl="null"/>
                </items>
            </main>;
            xml.items.item[0].@slideurl = url;
            currentState = ready.name;
            container.data = xml;
        }

        public function onSourceChoose(obj:FileItem):void {

            switch (obj.type) {
                case 'YouTube':
                    rtmp_send(PacketType.DOCUMENT, new DocChangeData({type: "load", dataType: "YouTube", title: obj.title, id: this.instanceID, url: obj.url, duration: obj.getParam('duration')}), Recipients.ALL);
                    break;
                case 'IMAGE':
                    rtmp_send(PacketType.DOCUMENT, new DocChangeData({type: "load", dataType: "IMAGE", title: obj.title, id: this.instanceID, url: obj.url}), Recipients.ALL);
                    break;
                case 'DOCS':
                case 'PRES':
                    rtmp_send(PacketType.DOCUMENT, new DocChangeData({type: "loading", id: App.user.sid}), Recipients.ALL_EXCLUDE_ME);
                    //convertFromLibrary(obj);
                    break;
                case 'VIDEO':
                    rtmp_send(PacketType.DOCUMENT, new DocChangeData({type: "load", dataType: "VIDEO", title: obj.title, id: this.instanceID, url: obj.url, duration: obj.getParam('duration')}), Recipients.ALL);
                    break;
                case "GOOGLE_IMAGE":
                    rtmp_send(PacketType.DOCUMENT, new DocChangeData({type: "loading", id: App.user.sid}), Recipients.ALL_EXCLUDE_ME);
                    // convertFromGoogle(obj);
                    break;

            }

        }

